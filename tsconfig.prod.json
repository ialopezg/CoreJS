{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "outDir": "./lib",
    "rootDir": "./src",
    "removeComments": false,
    "noLib": false,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [ "./src/**/*" ],
  "exclude": [ "lib", "node_modules" ]
}
