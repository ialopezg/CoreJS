{
  "name": "@ialopezg/corejs",
  "version": "1.0.0-alpha.1",
  "description": "Custom tools for NodeJS",
  "main": "lib/index.js",
  "private": false,
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "echo Using node index.js",
    "build:live": "nodemon -e ts --watch src index.js",
    "compile": "npm run prebuild && tsc -p tsconfig.prod.json",
    "copy": "copyfiles package.json LICENSE README.md CHANGELOG.MD lib",
    "coverage": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "lint": "prettier --check \"./src/**/*.ts\"",
    "lint:fix": "prettier --write \"./src/**/*.ts\"",
    "package": "npm run build && npm run copy && npm run public",
    "prepare": "husky install",
    "public": "json -I -f lib/package.json -e 'this.private=false'",
    "release": "standard-version",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "start": "npm run build:live",
    "test": "karma start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ialopezg/corejs.git"
  },
  "keywords": [],
  "author": "Isidro A. Lopez G. <me@ialopezg.com> (https://ialopezg.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ialopezg/corejs/issues"
  },
  "homepage": "https://github.com/ialopezg/corejs#readme",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "custom-error-service": "^0.4.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongodb": "^4.10.0",
    "morgan": "^1.10.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.7",
    "socket.io": "^4.5.2",
    "typeorm": "^0.3.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.3.3",
    "@types/express": "^4.17.14",
    "@types/karma": "^6.3.3",
    "@types/lodash": "^4.14.186",
    "@types/mocha": "^10.0.0",
    "@types/mongodb": "^4.0.7",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.8.3",
    "@types/passport": "^1.0.11",
    "@types/passport-jwt": "^3.0.7",
