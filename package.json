{
  "name": "@ialopezg/corejs",
  "version": "1.0.0-RC.0",
  "description": "Custom tools for NodeJS",
  "main": "lib/index.js",
  "private": false,
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "echo Using node index.js",
    "build:live": "nodemon -e ts --watch src index.js",
    "compile": "pnpm run prebuild && tsc -p tsconfig.prod.json",
    "copy": "copyfiles package.json LICENSE README.md CHANGELOG.MD lib",
    "lint": "prettier --check \"./src/**/*.ts\"",
    "lint:fix": "prettier --write \"./src/**/*.ts\"",
    "microservice:live": "nodemon -e ts --watch src microservice.js",
    "microservice": "node microservice.js",
    "package": "pnpm run build && pnpm run copy && npm run public",
    "prepare": "husky install",
    "public": "json -I -f lib/package.json -e 'this.private=false'",
    "release": "standard-version",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "start": "concurrently \"pnpm run build:live\" \"pnpm run microservice:live\"",
    "test": "nyc --require ts-node/register mocha src/**/*.spec.ts --reporter spec",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ialopezg/corejs.git"
  },
  "keywords": [],
  "author": "Isidro A. Lopez G. <me@ialopezg.com> (https://ialopezg.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ialopezg/corejs/issues"
  },
  "homepage": "https://github.com/ialopezg/corejs#readme",
  "dependencies": {
    "@ialopezg/cli": "^1.0.2",
    "@ialopezg/commonjs": "^1.2.3",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "custom-error-service": "^0.4.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "json-socket": "^0.3.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.8.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.0",
    "pg": "^8.8.0",
    "redis": "^4.6.11",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.7",
    "socket.io": "^4.5.4",
    "typeorm": "^0.3.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.3.4",
    "@types/express": "^4.17.14",
    "@types/lodash": "^4.14.190",
    "@types/mocha": "^10.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^20.10.1",
    "@types/passport": "^1.0.11",
    "@types/passport-jwt": "^3.0.7",
    "@types/sinon": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "chai": "^4.3.7",
    "concurrently": "^8.2.2",
    "conventional-changelog-angular": "^7.0.0",
    "conventional-changelog-cli": "^4.1.0",
    "copyfiles": "^2.4.1",
    "coveralls": "^3.1.1",
    "eslint": "^8.28.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.2",
    "imports-loader": "^4.0.1",
    "json": "^11.0.0",
    "json-loader": "^0.5.7",
    "mocha": "^10.1.0",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0",
    "standard-version": "^9.5.0",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "files": [
    "lib",
    "CHANGELOG.md",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=8"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
