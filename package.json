{
  "name": "@ialopezg/corejs",
  "version": "0.0.3",
  "description": "Custom tools for NodeJS",
  "main": "lib/index.js",
  "module": "lib/index.es.js",
  "browser": "lib/index.umd.js",
  "sideEffects": false,
  "private": false,
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "echo Using TypeScript && rollup -c",
    "copy": "copyfiles package.json LICENSE README.md CHANGELOG.MD lib",
    "coverage": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "lint": "prettier --check \"./src/**/*.ts\"",
    "lint:fix": "prettier --write \"./src/**/*.ts\"",
    "package": "npm run build && npm run copy && npm run public",
    "prepare": "husky install",
    "public": "json -I -f lib/package.json -e 'this.private=false'",
    "test": "jest",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ialopezg/corejs.git"
  },
  "keywords": [],
  "author": "Isidro A. Lopez G. <me@ialopezg.com> (https://ialopezg.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ialopezg/corejs/issues"
  },
  "homepage": "https://github.com/ialopezg/corejs#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@rollup/plugin-typescript": "^8.3.3",
    "@types/jest": "^28.1.2",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "conventional-changelog-angular": "^5.0.13",
    "conventional-changelog-cli": "^2.2.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.18.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.3",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "json": "^11.0.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.75.7",
    "rollup-plugin-terser": "^7.0.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  },
  "files": [
    "lib",
    "CHANGELOG.md",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=8"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 90
      }
    }
  },
  "dependencies": {
    "bcrypt": "^5.0.1"
  }
}
